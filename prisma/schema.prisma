// prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ReadingStatus {
  QUERO_LER
  LENDO
  LIDO
  PAUSADO
  ABANDONADO
}

model Genre {
  id    String  @id @default(cuid())
  name  String  @unique
  books Book[]
}

model Book {
  id        String        @id @default(cuid())
  title     String
  author    String
  year      Int?
  pages     Int?
  rating    Int?
  synopsis  String?
  cover     String?
  genre     Genre         @relation(fields: [genreId], references: [id])
  genreId   String        // Correct type to match Genre.id
  status    ReadingStatus @default(QUERO_LER)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}
